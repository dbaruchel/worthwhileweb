extends layout.pug
block content
  +navbar("projets")
  #project-page
    h1.screen-title Missions réalisées
    each mission in missions
      .project-box
        .pure-g
          .pure-u-1.pure-u-md-1-2
            .project-img-container
              img(src=mission.image_url)
          .pure-u-1.pure-u-md-1-2
            .project-text-container
              .project-title #{mission.title}   
              .project-description #{mission.description}
    .btn-cont
      button.btn
        a(href="https://dbaruchel.typeform.com/to/ERD4by" target="_blank") A mon tour
