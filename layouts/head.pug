  meta(name="description" content=description)
  meta(name="keywords" content="Web, Culture, Interesting, Spend time, Learn, Discover, Explore")

  //- TAGS FACEBOOK
  //- meta(property="og:url" content="https://www.monsieurbarbier.com/")
