mixin scriptsHeaders(sources)
  <!--[if lte IE 9]>
  each source in sources
    script(src=source)
  <![endif]-->
  <!--[if gt IE 9 | !IE ]><!-->
  each source in sources
    script(src=source defer)
  <!--<![endif]-->

mixin seoHeaders(title, description, image)
