mixin navbar(route)
  nav
    ul
      li
        a(href=link.to("/") class= route ==="index" ? "active" : "")
          |#[i.fa.fa-home]&nbsp; Home
      li
        a(href=link.to("/initiatives") class= route ==="initiatives" ? "active" : "")
          |#[i.fa.fa-database]&nbsp; Collection
      li
        a(href=link.to("/howtos") class= route ==="howtos" ? "active" : "")
          |#[i.fa.fa-lightbulb-o]&nbsp; Browse Better
      li
        a(href=link.to("/reads") class= route ==="reads" ? "active" : "")
          |#[i.fa.fa-graduation-cap]&nbsp; Go Further
      li
        a(href=link.to('/experiments') class= route ==="experiments" ? "active" : "")
          |#[i.fa.fa-flask]&nbsp; Experiments
    
